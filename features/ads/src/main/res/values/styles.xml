<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme.AdAttribution">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">10sp</item>
        <item name="android:text">Ad</item>
        <item name="android:minWidth">15px</item>
        <item name="android:minHeight">15px</item>
        <item name="android:background">#f1b12b</item>
    </style>

    <style name="AppTheme.AdTitle">
        <item name="android:maxLines">1</item>
        <!--        <item name="android:maxLength">25</item>-->
        <item name="android:ellipsize">end</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="AppTheme.AdBody">
        <item name="android:maxLines">2</item>
        <!--        <item name="android:maxLength">90</item>-->
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="AppTheme.CallToAction">
        <!--        <item name="android:maxLines">3</item>-->
        <item name="android:maxLength">15</item>
        <item name="android:ellipsize">end</item>
    </style>
</resources>