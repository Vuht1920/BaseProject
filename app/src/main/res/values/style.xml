<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme.NoBackground" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:toolbarStyle">@style/appToolbarStyle</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <style name="appToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="titleTextColor">?home_text_main_color</item>
        <item name="navigationIcon">@drawable/ic_back_24</item>
        <item name="subtitleTextColor">?home_text_second_color</item>
    </style>
</resources>
