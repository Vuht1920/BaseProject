<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_default"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_200"
            android:background="@color/colorPrimary"
            android:fitsSystemWindows="true"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/collapsing_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                app:contentScrim="@color/colorPrimary"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_background"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@color/color_text_selection"
                    app:layout_collapseMode="parallax" />

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?android:attr/actionBarSize"
                    android:background="@color/colorPrimary"
                    android:theme="@style/ToolBarStyle"
                    app:contentInsetStartWithNavigation="0dp"
                    app:layout_collapseMode="pin"
                    app:navigationIcon="?android:attr/homeAsUpIndicator"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/ll_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingHorizontal="@dimen/dp_4"
                    app:layout_collapseMode="parallax"
                    app:layout_collapseParallaxMultiplier="0.5">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv_app_preview"
                        android:layout_width="@dimen/dp_72"
                        android:layout_height="@dimen/dp_72"
                        android:scaleType="centerCrop"
                        android:transitionName="app_icon"
                        app:srcCompat="@drawable/app_icon_splash" />

                    <com.mmt.extractor.ui.custom.MarqueTextView
                        android:id="@+id/tv_app_names"
                        style="@style/TextMain"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="textStart"
                        tools:text="Extractor" />

                </androidx.appcompat.widget.LinearLayoutCompat>

            </com.google.android.material.appbar.CollapsingToolbarLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:orientation="vertical"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.mmt.extractor.ui.custom.MarqueTextView
                        android:id="@+id/btn_export"
                        style="@style/TextMain"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="?selectableItemBackground"
                        android:drawableTop="@drawable/ic_export"
                        android:drawablePadding="@dimen/dp_2"
                        android:gravity="center"
                        android:padding="@dimen/dp_8"
                        android:text="@string/txt_export" />

                    <com.mmt.extractor.ui.custom.MarqueTextView
                        android:id="@+id/btn_save_icon"
                        style="@style/TextMain"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="?selectableItemBackground"
                        android:drawableTop="@drawable/ic_image_24"
                        android:drawablePadding="@dimen/dp_2"
                        android:gravity="center"
                        android:padding="@dimen/dp_8"
                        android:text="@string/txt_save_icon" />

                    <com.mmt.extractor.ui.custom.MarqueTextView
                        android:id="@+id/btn_open"
                        style="@style/TextMain"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="?selectableItemBackground"
                        android:drawableTop="@drawable/ic_android_24"
                        android:drawablePadding="@dimen/dp_2"
                        android:gravity="center"
                        android:padding="@dimen/dp_8"
                        android:text="@string/txt_open" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/btn_settings"
                        style="@style/TextMain"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="?selectableItemBackground"
                        android:drawableTop="@drawable/ic_settings_24"
                        android:drawablePadding="@dimen/dp_2"
                        android:gravity="center"
                        android:padding="@dimen/dp_8"
                        android:text="@string/settings" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/btn_uninstall"
                        style="@style/TextMain"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="?selectableItemBackground"
                        android:drawableTop="@drawable/ic_uninstall"
                        android:drawablePadding="@dimen/dp_2"
                        android:gravity="center"
                        android:padding="@dimen/dp_8"
                        android:text="@string/txt_uninstall" />

                </androidx.appcompat.widget.LinearLayoutCompat>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/color_view_divider" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/_title_info"
                    style="@style/TextMain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_16"
                    android:layout_marginTop="12dp"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="start|center_vertical"
                    android:text="@string/txt_app_information" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="@dimen/dp_16">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_8"
                        android:gravity="center_vertical"
                        android:minHeight="@dimen/item_menu_height"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/TextMain"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:maxLines="4"
                            android:text="@string/txt_package_name"
                            android:textColor="?home_accent_color" />

                        <TextView
                            android:id="@+id/tv_package_name"
                            style="@style/TextSecond"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:maxLines="4" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:minHeight="@dimen/item_menu_height"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/TextMain"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:maxLines="4"
                            android:text="@string/txt_apk_size"
                            android:textColor="?home_accent_color" />

                        <TextView
                            android:id="@+id/tv_apk_size"
                            style="@style/TextSecond"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:maxLines="4" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:minHeight="@dimen/item_menu_height"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/TextMain"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:maxLines="4"
                            android:text="@string/txt_version_name"
                            android:textColor="?home_accent_color" />

                        <TextView
                            android:id="@+id/tv_version_name"
                            style="@style/TextSecond"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:maxLines="4" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/group_quality"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:minHeight="@dimen/item_menu_height"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/TextMain"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:maxLines="4"
                            android:text="@string/txt_version_number"
                            android:textColor="?home_accent_color" />

                        <TextView
                            android:id="@+id/tv_version_number"
                            style="@style/TextSecond"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:maxLines="4" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:minHeight="@dimen/item_menu_height"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/TextMain"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:maxLines="4"
                            android:text="@string/txt_min_sdk"
                            android:textColor="?home_accent_color" />

                        <TextView
                            android:id="@+id/tv_min_sdk"
                            style="@style/TextSecond"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:maxLines="4" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:minHeight="@dimen/item_menu_height"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/TextMain"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:maxLines="4"
                            android:text="@string/txt_target_sdk"
                            android:textColor="?home_accent_color" />

                        <TextView
                            android:id="@+id/tv_target_sdk"
                            style="@style/TextSecond"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:maxLines="4" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:minHeight="@dimen/item_menu_height"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/TextMain"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:maxLines="4"
                            android:text="@string/txt_category"
                            android:textColor="?home_accent_color" />

                        <TextView
                            android:id="@+id/tv_category"
                            style="@style/TextSecond"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:maxLines="4" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:minHeight="@dimen/item_menu_height"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/TextMain"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:maxLines="4"
                            android:text="@string/txt_installed"
                            android:textColor="?home_accent_color" />

                        <TextView
                            android:id="@+id/tv_installed"
                            style="@style/TextSecond"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:maxLines="4" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:minHeight="@dimen/item_menu_height"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/TextMain"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:maxLines="4"
                            android:text="@string/txt_last_updated"
                            android:textColor="?home_accent_color" />

                        <TextView
                            android:id="@+id/tv_last_updated"
                            style="@style/TextSecond"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:maxLines="4" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:minHeight="@dimen/item_menu_height"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/TextMain"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:maxLines="4"
                            android:text="@string/txt_source_apk"
                            android:textColor="?home_accent_color" />

                        <TextView
                            android:id="@+id/tv_source_apk"
                            style="@style/TextSecond"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3" />

                    </androidx.appcompat.widget.LinearLayoutCompat>
                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.core.widget.NestedScrollView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</FrameLayout>